[core]
  editor = /usr/bin/vim
  pager = less -+$LESS -FRX
[user]
  name = Wagner Camarao
  email = wagner@camarao.io
[color]
  ui = auto
  interactive = auto
[alias]
  br = branch -v
  ci = commit -v
  co = checkout
  dc = diff --word-diff=color --cached
  df = diff --word-diff=color
  dt = diff-tree --no-commit-id --name-only -r
  fr = !git fetch --all && git rebase origin/master
  gp = grep --break --heading
  lg = log --graph --pretty=format:'%Cred%h%Creset %Cgreen%cr%Creset %Cblue%an%Creset%C(yellow)%d%Creset %s'
  lt = !git lg | head
  ls = log --stat
  sl = shortlog -sn
  st = status -sb

