[core]
  editor = /usr/bin/vim
  pager = less -+$LESS -FRX
[user]
  name = Wagner Camarao
  email = functioncallback@gmail.com
[color]
  ui = auto
  interactive = auto
[alias]
  br = branch -v
  ci = commit -v
  co = checkout
  dc = diff --word-diff=color --cached
  df = diff --word-diff=color
  fr = !git fetch && git rebase origin/master
  gp = grep --break --heading
  lg = log --graph --pretty=format:'%Cred%h%Creset %Cgreen%cr%Creset %Cblue%an%Creset%C(yellow)%d%Creset %s'
  ls = log --stat
  sl = shortlog -sn
  st = status -sb
  unadd = reset HEAD
[grep]
  lineNumber = true
